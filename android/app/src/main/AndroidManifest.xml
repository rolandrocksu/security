<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.security">
   <application
        android:label="security"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <!-- Specifies an Android theme to apply to this Activity as soon as
                 the Android process has started. This theme is visible to the user
                 while the Flutter UI initializes. After that, this theme continues
                 to determine the Window background behind the Flutter UI. -->
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- Don't delete the meta-data below.
             This is used by the Flutter tool to generate GeneratedPluginRegistrant.java -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="29" />

        <!-- Add the following permissions to the manifest -->

    <!-- Permission for accessing the camera -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Permission for accessing the device's location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Permission for accessing the device's contacts -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- Permission for accessing the device's calendar -->
    <uses-permission android:name="android.permission.READ_CALENDAR" />

    <!-- Permission for accessing the device's microphone -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Permission for accessing the device's storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Permission for making phone calls -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- Permission for sending SMS messages -->
    <uses-permission android:name="android.permission.SEND_SMS" />

    <!-- Permission for accessing the device's sensors -->
    <uses-permission android:name="android.permission.BODY_SENSORS" />

</manifest>
